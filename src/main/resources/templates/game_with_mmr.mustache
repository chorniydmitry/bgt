    color: white;
    text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
}

.mmrRating {
    text-align: left;
    position: relative;
    margin: 0px;
    padding: 0px;
    color: {{mmrColor}};
}

